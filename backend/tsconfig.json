{
  "compilerOptions": {
    "target": "ES6",
    "module": "node16",
    "moduleResolution": "node16",
    "rootDir": "./" /* Set the root directory as the project root */,
    "outDir": "./dist" /* Specify that compiled files go into the dist folder */,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts" /* Include all TypeScript files in the src folder */],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts" /* Exclude test files and compiled output folder */
  ]
}
